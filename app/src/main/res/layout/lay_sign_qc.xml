<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#d13a3a"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:paddingTop="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Sign - Petugas Gudang"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="M I S O"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, "
            android:textSize="12sp"
            android:textColor="#653a3a" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tx_userqcsign"
            android:layout_height="wrap_content"
            android:text="DEDY ALIM MUZAWWIR"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#653a3a" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:scrollbars="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:columnCount="1" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:paddingLeft="20dp"
                android:background="#ffffff"
                android:paddingRight="20dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_gravity="top|center"
                android:columnCount="1" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:orientation="vertical">
                    <WebView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/web_view_sign_qc"
                        tools:ignore="WebViewLayout" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center_vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="#653a3a"
        android:gravity="bottom|center_horizontal|center_vertical">
        <Button
            android:id="@+id/btn_back_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Back to Main Menu "
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_back_"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textColor="#f4f4f4"
            android:visibility="gone"
            android:background="@drawable/wr4"/>
        <Button
            android:id="@+id/btn_simpan_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" View PDF"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_next_"
            android:textStyle="bold"
            android:textColor="#f4f4f4"
            android:background="@drawable/wr2"/>

    </LinearLayout>
</LinearLayout>